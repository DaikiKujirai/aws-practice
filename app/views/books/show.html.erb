<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h1>User info</h1>
      <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image" %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <th>introduction</th>
            <td><%= @user.introduction %></td>
          </tr>
        </tbody>
      </table>
      <%= link_to edit_user_path(@user) do %>
      <span class="btn btn-outline-secondary btn-block fas fa-user-cog"></span>
      <% end %>
      <h2 class="mt-3">New book</h2>
      <%= form_with model:@book_new, local:true do |f| %>
        <%= f.label :Title %>
        <%= f.text_field :title, class: "form-control book_title" %>
        <%= f.label :Opinion %>
        <%= f.text_area :body, class: "form-control book_body" %>
        <p><%= f.submit 'Create Book', class:"btn btn-success" %></p>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td class="text-center"><%= link_to user_path(@user) do %>
            <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image" %><br>
            <%= @user.name %>
            <% end %></td>
            <td><%= link_to @book.title, book_path %></td>
            <td><%= @book.body %></td>
            <% if @user == current_user %>
            <td><%= link_to 'Edit', edit_book_path, class: "btn btn-success" %></td>
            <td><%= link_to "Destroy", book_path(@book), class: "btn btn-danger", method: :delete, "data-confirm" => "本当に消しますか？" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
