<div class="container">
  <div class="row">
    <div class="col text-center">
      <h1>User info</h1>
      <% if @user.errors.any? %>
        <%= @user.errors.count %>errors prohibited this obj from being saved:
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
