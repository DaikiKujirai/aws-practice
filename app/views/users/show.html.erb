<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h1>User info</h1>
      <%= attachment_image_tag @user, :profile_image, :fill, 120, 120, fallback: "no_image", class:"mb-3" %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <th>introduction</th>
            <td><%= @user.introduction %></td>
          </tr>
        </tbody>
      </table>
      <%= link_to edit_user_path do %>
      <span class="btn btn-outline-secondary btn-block fas fa-user-cog"></span>
      <% end %>
      <h2 class="mt-3">New book</h2>
      <%= form_with model:@book, local:true do |f| %>
        <%= f.label :Title %>
        <%= f.text_field :title, class: "form-control book_title" %>
        <%= f.label :Opinion %>
        <%= f.text_area :body, class: "form-control book_body" %>
        <p><%= f.submit 'Create Book', class:"btn btn-success mt-3" %></p>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover">
        <thead class="thead-light">
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td><%= link_to user_path(@user) do %>
            <%= attachment_image_tag @user, :profile_image, :fill, 80, 80, fallback: "no_image" %>
            <% end %></td>
            <td><%= link_to book.title, book_path(book) %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>