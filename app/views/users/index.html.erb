<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h1>User info</h1>
      <%= attachment_image_tag current_user, :profile_image, :fill, 120, 120, fallback: "no_image" %>
      <table class="table mt-3">
        <tbody>
          <tr>
            <th>name</th>
            <td><%= current_user.name %></td>
          </tr>
          <tr>
            <th>introduction</th>
            <td><%= current_user.introduction %></td>
          </tr>
        </tbody>
      </table>
      <%= link_to edit_user_path(@user) do %>
      <span class="btn btn-outline-secondary btn-block fas fa-user-cog"></span>
      <% end %>
      <h2 class="mt-3">New book</h2>
      <%= form_with model:@book, local:true do |f| %>
        <%= f.label :Title %>
        <%= f.text_field :title, class: "form-control book_title" %>
        <%= f.label :Opinion %>
        <%= f.text_area :body, class: "form-control book_body" %>
        <p><%= f.submit 'Create Book', class:"btn btn-success mt-3" %></p>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table table-hover">
        <thead class="thead-light">
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= attachment_image_tag user, :profile_image, :fill, 80, 80, fallback: "no_image" %></td>
            <td><%= user.name %></td>
            <td><%= link_to 'Show', user_path(user) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <div class="row justify-content-md-center">
        <div class="col-md-auto">
          <%= paginate @users %>
        </div>
      </div>
    </div>
  </div>
</div>